{
  "name": "hacktoberfest-2025",
  "version": "1.0.0",
  "description": "A modern web development project for Hacktoberfest 2025",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:ci": "npm run test -- --coverage --watchAll=false",
    "test:coverage": "npm run test:ci && npm run coverage:merge",
    "coverage:merge": "nyc merge coverage coverage/merged-coverage.json",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "prepare": "husky install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "hacktoberfest",
    "hacktoberfest-2025",
    "open-source",
    "javascript",
    "typescript",
    "react",
    "nodejs",
    "web-development"
  ],
  "author": "hari7261",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hari7261/Hacktoberfest-2025.git"
  },
  "bugs": {
    "url": "https://github.com/hari7261/Hacktoberfest-2025/issues"
  },
  "homepage": "https://github.com/hari7261/Hacktoberfest-2025#readme",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "nyc": "^15.1.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
